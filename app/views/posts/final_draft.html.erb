<div data-controller="apply-filter">
  <div class="w-full py-5 d-flex justify-content-center align-items-center">
    <div>
      <div>
        <h2>Add Description to Photo</h2>
        <%= image_tag @post.photo.variant(resize_to_limit: @resize_dimension,crop: [@post.x_offsets, @post.y_offsets, @post.width, @post.height]),
                      data: {controller: "photo-filter", "photo-filter-target": "image", filter: @post.filter_name } ,
                      class: (@post.filter_name.present? ? @post.filter_name : nil)%>
      </div>
      <%= form_with model: @post, data: { "apply-filter-target": "form" } do |f| %>
        <%= f.hidden_field :status, value: :published %>
        <%= f.text_area :description, class: "form-control my-4" %>
        <%= f.submit "Apply Filter", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>