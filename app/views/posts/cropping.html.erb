<h2 class="mt-4">Crop Photo</h2>
<div data-controller="photo-cropper">
  <%= image_tag @post.photo.variant(resize_to_limit: Post::RESIZE_DIMENSIONS), data: { "photo-cropper-target": "image" } %>
  <%= form_with model: @post, data: { "photo-cropper-target": "form" } do |f| %>
    <%= f.hidden_field :x_offsets, data: { "photo-cropper-target": "xOffset" } %>
    <%= f.hidden_field :y_offsets, data: { "photo-cropper-target": "yOffset" } %>
    <%= f.hidden_field :width, data: { "photo-cropper-target": "width" } %>
    <%= f.hidden_field :height, data: { "photo-cropper-target": "height" } %>
    <%= f.hidden_field :status, value: :applying_filter %>
    <%= f.submit "Crop Photo", class: "btn btn-primary mt-4" %>
  <% end %>
</div>